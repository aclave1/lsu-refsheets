<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manage_courses"
        android:textSize="24dp"
        android:textStyle="bold" />


    <LinearLayout
        style="@style/actionsection"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="@dimen/formsection_height">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:gravity="start"
                android:textStyle="bold"
                android:textSize="24dp"
                android:text="Department" />

            <Spinner
                android:id="@+id/managecourses_courselist_spinner"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:background="#FFFFFF"></Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:gravity="start"
                android:textStyle="bold"
                android:textSize="24dp"

                android:text="Course Number" />


            <NumberPicker android:id="@+id/managecourses_coursenum"
                android:layout_width="100dp"
                android:layout_marginLeft="20dp"
                android:layout_height="45dp"
                android:background="#FFFFFF"
                ></NumberPicker>
        </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:background="#ffffff"
        android:layout_marginRight="20px"
        android:layout_height="wrap_content" android:text="Create"/>
    </LinearLayout>

</LinearLayout>